{% extends 'base.html.twig' %}

{% block title %}{{ producer.socialReason }}{% endblock %}

{% block body %}

{% set url = path('producer_show', {'id': producer.id}) %}
    <div class="card mx-auto mt-3 mb-3" style="max-width: 50%;">
        <div class="row no-gutters">
            <div class="card-img-responsive img-fluid col-md-4 col-sm-12" style="height: auto;">               
                {% if producer.avatar matches '#^https://#' %}
                    <a href="{{ url }}"><img src="{{ producer.avatar }}" alt="{{ producer.firstname }}"></a>
                {% else %}
                    <a href="{{ url }}"><img src="{{ asset('uploads/avatar/' ~ producer.avatar) }}" alt="{{ producer.firstname }}"></a>
                {% endif %}
            </div>
            <div class="col-md-8 label-producer-homepage">
                <div class="card-body text-center ">
                    <h5 class="card-title">{{ producer.socialReason }}</h5>
                    <p>{{ producer.city }}</p>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                </div>
            </div>
            <div class="text-center col-md-12">
                <ul class="list-group ">
                    <li class="list-group-item">
                        <p class="card-text">
                        <h5>Description</h5>
                        </p>
                        {% if producer.description %}
                            {{ producer.description }}
                        {% else %}
                            <p>Non communiqu√©e</p>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <div class="container-fluid homepagecard">

        {% for product in producer.products %}
        <div class="card col-xs-10 col-sm-6 col-md-4 col-lg-3 overflow-hidden " >
            <div class="card-img-responsive mt-2 text-center ">
                <a href="#"><img src="{{ product.image }}" alt="{{ product.name}}"></a>            
            </div>
            <div  class="card-body label-producer-homepage">
                <a href="{{ path('product_show', {'id' : product.id})}}">
                <h5 class="card-title">{{ product.name }}</h5>
                <p>{{ product.price }} euros</p>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <p class="card-text"> </p>

                   </a>
            </div>
            <ul class="list-group">
                <li class="list-group-item description-producer-homepage">
                    <p class="card-text">
                        <h5>Description</h5>
                        {{ product.description }}
                    </p>
                </li>

            </ul>
            <div class="card-body text-center">
                <a class="btn btn-secondary prod-button" href="{{ path('product_show', {'id' : product.id})}}">Voir Plus</a>
            </div>
        </div>
          
        {% endfor %}
    </div>
{% endblock %}
{% extends 'base.html.twig' %}
{% block title %} Les produits disponible pour  {% endblock %}

{% block body %}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="text-center">Les produits disponible pour la sous-categorie :  </h1>
      <p class="text-center text-uppercase h1">{{subcategory.name}} </p>

    </div>
</div>
<div class="container my-3 d-flex flex-wrap w-100">
    {% for product in subcategory.products %}
    {% set url = path('product_show', {'id': product.id}) %}
    <div class="card col-xs-10 col-sm-6 col-md-4 col-lg-3 overflow-hidden " >
        <div class="card-img-responsive mt-2 text-center ">
            {% if product.image matches '#^https://#' %}
                <a href="{{ url }}"><img src="{{ product.image }}" alt="{{ product.name }}"></a>
            {% else %}
                <a href="{{ url }}"><img src="{{ asset('uploads/avatar/' ~ product.image) }}" alt="{{ product.name }}"></a>
            {% endif %}          
        </div>
        <div  class="card-body label-producer-homepage">
            <a href="#">
            <h5 class="card-title">{{ product.name }}</h5>
            <p>{{ product.price }} euros</p>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
            <p class="card-text"> </p>
            </a>
        </div>
        <ul class="list-group">
            <li class="list-group-item description-producer-homepage">
                <p class="card-text">
                    <h5>Description</h5>
                    {{ product.description }}
                </p>
            </li>
        </ul>
        <div class="card-body text-center">
            <a class="btn btn-secondary prod-button" href="{{ path('product_show', {'id' : product.id})}}">Voir Plus</a>
        </div>
    </div>                  
    {% endfor %}
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ producer.socialReason }}{% endblock %}

{% block body %}

    <h1 class="text-center mt-4">Modifier le producteur</h1>

    <div class="container text-center col-md-6 col-sm-10">
        {% form_theme editProducerForm with ['bootstrap_4_horizontal_layout.html.twig'] only %}
        {{ form_start(editProducerForm) }}

        {{ form_row(editProducerForm.socialReason) }}
        {{ form_row(editProducerForm.siretNumber) }}
        {{ form_row(editProducerForm.firstname) }}
        {{ form_row(editProducerForm.lastname) }}
        {{ form_row(editProducerForm.user) }}
        {{ form_row(editProducerForm.address) }}
        {{ form_row(editProducerForm.postalCode) }}
        {{ form_row(editProducerForm.city) }}
        {{ form_row(editProducerForm.email) }}
        {{ form_row(editProducerForm.telephone) }}
        {{ form_row(editProducerForm.status) }}
        {{ form_row(editProducerForm.description) }}

        {# TODO: Image upload #}
        {{ form_row(editProducerForm.avatar) }}

        <div class="form-group row">
            <label for="add_category_enable" class="col-form-label col-sm-2">Activer</label>
            <div class="col-sm-10" data-children-count="1">
                {{ form_row(editProducerForm.enable, {'attr': {'class': 'switch form-control'}}) }}
            </div>
        </div>

        {{ form_row(editProducerForm.createdAt) }}

        <div class="mt-4">
            <a href="{{ path('backend_producer_list') }}" class="btn btn-secondary">Retour Ã  la liste</a>
            <button type="submit" class="btn btn-primary">Modifier</button>
        </div>

        {{ form_end(editProducerForm) }}
    </div>
{% endblock %}


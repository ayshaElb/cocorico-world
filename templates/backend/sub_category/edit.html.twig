

{% extends 'base.html.twig' %}

{% block title %}{{ subcategory.name }}{% endblock %}

{% block body %}

    <h1 class="text-center mt-4">Modifier la sous-catégorie</h1>

    <div class="container text-center col-md-6 col-sm-10">
        {% form_theme editSubcategoryForm with ['bootstrap_4_horizontal_layout.html.twig'] only %}
        {{ form_start(editSubcategoryForm) }}

        {{ form_row(editSubcategoryForm.name) }}

        {{ form_row(editSubcategoryForm.category) }}

        {# TODO: Image upload #}
        {{ form_row(editSubcategoryForm.image) }}

        <div class="form-group row">
            <label for="add_category_enable" class="col-form-label col-sm-2">Activer</label>
            <div class="col-sm-10" data-children-count="1">
                {{ form_row(editSubcategoryForm.enable, {'attr': {'class': 'switch form-control'}}) }}
            </div>
        </div>

        {{ form_row(editSubcategoryForm.createdAt) }}

        <div class="mt-4">
            <a href="{{ path('backend_subcategory_list') }}" class="btn btn-secondary">Retour à la liste</a>
            <button type="submit" class="btn btn-primary">Modifier</button>
        </div>

        {{ form_end(editSubcategoryForm) }}
    </div>
{% endblock %}